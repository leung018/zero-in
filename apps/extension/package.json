{
  "name": "@zero-in/extension",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "build": "NAME_SUFFIX=' (LOCAL)' wxt build",
    "build:ci": "VITE_USE_FIREBASE_EMULATOR=true wxt build",
    "zip": "wxt zip",
    "firebase-emulators": "firebase --config ../firebase/firebase.json emulators:start",
    "test:unit": "vitest --project unit run",
    "test:unit:watch": "vitest --project unit",
    "test:unit:coverage": "vitest --project unit run --coverage",
    "test:integration": "firebase --config ../firebase/firebase.json emulators:exec 'vitest --project integration run'",
    "test:integration:watch": "vitest --project integration",
    "test:e2e": "firebase --config ../firebase/firebase.json emulators:exec 'playwright test'",
    "build-and-e2e": "yarn build:ci && yarn test:e2e",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-pattern '.gitignore'",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "@zero-in/shared": "workspace:*",
    "bootstrap": "^5.3.7",
    "bootstrap-vue-next": "^0.30.5",
    "firebase": "^12.0.0",
    "vue": "^3.5.20"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@iconify-json/ic": "^1.2.2",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/prime": "^1.2.2",
    "@playwright/test": "^1.55.0",
    "@tsconfig/node20": "^20.1.6",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@wxt-dev/module-vue": "^1.0.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-playwright": "^2.3.0",
    "eslint-plugin-vue": "^10.1.0",
    "firebase-tools": "^14.17.0",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.2",
    "unplugin-icons": "^22.2.0",
    "unplugin-vue-components": "^28.8.0",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.2.10",
    "wxt": "^0.20.7"
  },
  "packageManager": "yarn@4.4.1"
}
