{
  "name": "zero-in",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "firebase_hosting"
  ],
  "scripts": {
    "dev": "wxt",
    "build": "NAME_SUFFIX=' (LOCAL)' wxt build",
    "build:ci": "VITE_USE_FIREBASE_EMULATOR=true wxt build",
    "zip": "wxt zip",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "cd firebase_emulators && firebase emulators:exec 'cd ../ && playwright test'",
    "build-and-e2e": "yarn build:ci && yarn test:e2e",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-pattern '.gitignore'",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.7",
    "bootstrap-vue-next": "^0.29.3",
    "firebase": "^11.10.0",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.27.0",
    "@iconify-json/ic": "^1.2.2",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/prime": "^1.2.2",
    "@playwright/test": "^1.53.1",
    "@tsconfig/node20": "^20.1.6",
    "@vitejs/plugin-vue": "^6.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "@wxt-dev/module-vue": "^1.0.2",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-vue": "^10.1.0",
    "firebase-tools": "^14.11.1",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "unplugin-icons": "^22.1.0",
    "unplugin-vue-components": "^28.8.0",
    "vitest": "^3.2.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^2.2.10",
    "wxt": "^0.20.7"
  },
  "packageManager": "yarn@3.6.3+sha512.d432ab8b22b89cb8b46649ebaf196159b0c1870904224771d75fdf8b55490aaa5de4d9f028deb0425f1513bff7843e97b9d117103795a23b12d2e7c1cedcf50f"
}
