{
  "name": "zero-in",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for the Zero-In project, including the browser extension and mobile app.",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
