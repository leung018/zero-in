root = true

[*]
end_of_line = lf
insert_final_newline = true

[*.{js,json,yml}]
charset = utf-8
indent_style = space
indent_size = 2

# Kotlin files
[*.{kt,kts}]
charset = utf-8
indent_style = space
indent_size = 2
